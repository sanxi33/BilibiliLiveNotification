{
  // HTTP 基础地址，你的聊天机器人 API 地址，该项目使用HTTP正向通信
  "http_base_url": "http://127.0.0.1:8080",

  // 用于身份验证的 Token，填写你聊天机器人的 Token，没有就留空
  "token": "",

  // 直播间配置
  "live_rooms": [
    {
      // B站直播间ID，填写你要关注的主播的直播间ID，直播间ID通常是live.bilibili.com/xxxxx，后面的这个数字
      "room_id": 1234,
      
      // 直播开始时发送通知的QQ群号，多个群号可以放在数组中
      "group_ids": [
        "群号1", // 请替换成实际的群号
        "群号2"  // 请替换成实际的群号
      ]
    },
    {
      // 另一个直播间的配置，不够再往下继续添加
      "room_id": 2345,
      
      // 该直播间开播时发送提醒的群号
      "group_ids": [
        "群号2", // 请替换成实际的群号
        "群号3"  // 请替换成实际的群号
      ]
    }
  ]
}